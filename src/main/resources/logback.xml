<configuration>

    <!-- 다른 설정들... -->

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread{30}] %-5level %logger{35} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- 다른 appender 설정들... -->

    <root level="info">
        <appender-ref ref="CONSOLE" />
        <!-- 다른 appender 참조들... -->
    </root>

</configuration>